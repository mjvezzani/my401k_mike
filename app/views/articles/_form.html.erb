<% if @article.errors.any? %>

  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>

<% end %>

<%= form_for @article do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br/>
  <%= f.label :body %>
  <%= f.text_area :body, :class => "tinymce", :rows => 20, :cols => 120 %>
  <br/>
  <%= f.submit %>

<% end %>

<%= tinymce %>
